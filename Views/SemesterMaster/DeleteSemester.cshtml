@model Student_Report_Management.Models.ViewModels.StudentReportViewModel
@{
    ViewBag.Title = "DeleteSemester";
}

<h4>Delete Semester</h4>

@using (Html.BeginForm("DeleteSemester", "SemesterMaster", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(Model => Model.Semister_Id)
        @Html.TextBoxFor(Model => Model.Semister_Id, new { @readonly = "readonly", @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(Model => Model.Semister_Name)
        @Html.TextBoxFor(Model => Model.Semister_Name, new { @readonly = "readonly", @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(Model => Model.Year_Id)
        @Html.TextBoxFor(Model => Model.Year_Id, new { @readonly = "readonly", @class = "form-control" })
    </div>
    <div class="form-group">
        <p style="color:red">Are you sure to Delete this Semester</p>
    </div>
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-primary" />
    </div>
    <div>
        @Html.ActionLink("Back to List", "GetSemesterData")
    </div>
}