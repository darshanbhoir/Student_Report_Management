@model Student_Report_Management.Models.ViewModels.StudentReportViewModel
@{
    ViewBag.Title = "DeleteDetail";
}

<br />

<h4>Delete Detail</h4>

@using (Html.BeginForm("DeleteDetail", "SemSubMap", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(Model => Model.Sem_Subject_Id)
        @Html.TextBoxFor(Model => Model.Sem_Subject_Id, new { @readonly = "readonly", @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(Model => Model.Semister_Id)
        @Html.TextBoxFor(Model => Model.Semister_Id, new { @readonly = "readonly", @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(Model => Model.Subject_Id)
        @Html.TextBoxFor(Model => Model.Subject_Id, new { @readonly = "readonly", @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(Model => Model.Max_Score)
        @Html.TextBoxFor(Model => Model.Max_Score, new { @readonly = "readonly", @class = "form-control" })
    </div>
    <div class="form-group">
        <p style="color:red">Are you sure to Delete this Detail</p>
    </div>
    <div class="form-group">
        <input type="submit" value="Delete Detail" class="btn btn-primary" />
    </div>
    <div>
        @Html.ActionLink("Back to List", "GetSemSubData")
    </div>
}

