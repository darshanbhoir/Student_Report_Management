@model IEnumerable<Student_Report_Management.Models.ViewModels.StudentReportViewModel>
@{
    ViewBag.Title = "TopThree";
}
<br />
<h4>top 3 from Particular Subject</h4>

<h6>Enter Deatils</h6>
<form method="get" action="/MyAPI/TopThree">
    <label for="SubjectName">Enter Subject Name</label>
    <input type="text" name="SubjectName" id="SubjectName" />
    <br />
    
    <button type="submit" class="btn-outline-primary">Search</button>
</form>

<table class="table table-bordered table-striped">
    <tr class="text-center">
        <th>
            @Html.DisplayNameFor(model => model.Report_Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Student_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User_Score)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="text-center">
            <td>
                @Html.DisplayFor(modelItem => item.Report_Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User_Score)
            </td>
        </tr>
    }
</table>

@Html.ActionLink("Back", "Index", "Home")