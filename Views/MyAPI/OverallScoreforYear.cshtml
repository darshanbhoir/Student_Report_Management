@model IEnumerable<Student_Report_Management.Models.ViewModels.StudentReportViewModel>
@{
    ViewBag.Title = "OverallScoreforYear";
}
<br />
<h4>Overall Score for specific year in descending order</h4>

<h6>Enter Details</h6>
<form method="get" action="/MyAPI/OverallScoreforYear">
    <label for="YearName">Enter Year Name</label>
    <input type="text" name="YearName" id="YearName" />
    <br />
    <button type="submit" class="btn-outline-primary">Search</button>
</form>


<table class="table table-bordered table-striped">
    <tr class="text-center">
        <th>
            @Html.DisplayNameFor(model => model.Student_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User_Score)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Max_Score)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Year_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Semister_Name)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="text-center">
            <td>
                @Html.DisplayFor(modelItem => item.Student_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User_Score)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Max_Score)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Semister_Name)
            </td>
        </tr>
    }
</table>

@Html.ActionLink("Back", "Index", "Home")
